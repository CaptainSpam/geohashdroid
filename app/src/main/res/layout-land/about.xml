<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/ScrollView01" xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="@dimen/about_minor_padding" android:layout_gravity="center_vertical" >
	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:padding="@dimen/about_major_padding" android:id="@+id/AboutInnerLayout">
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/TopHalf"
			android:orientation="horizontal">
			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/LeftSide"
				android:orientation="vertical">
				<ImageView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/Icon"
					android:layout_gravity="center_horizontal" android:src="@drawable/icon_small"></ImageView>
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/Title"
					android:text="@string/app_name" android:padding="@dimen/about_minor_padding" android:layout_gravity="center_horizontal" android:textSize="@dimen/about_title"></TextView>
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
					android:text="@string/about_version" android:id="@+id/Version"
					android:typeface="serif" android:textStyle="italic" android:textSize="@dimen/about_version_date"></TextView>
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/Date"
					android:textStyle="italic" android:typeface="serif"
					android:gravity="center" android:layout_gravity="center_horizontal"
					android:text="@string/about_date" android:textSize="@dimen/about_version_date"></TextView>
			</LinearLayout>
			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/RightSide"
				android:orientation="vertical" android:layout_gravity="center_vertical">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/Author"
					android:text="@string/about_by" android:layout_gravity="center_horizontal"
					android:padding="@dimen/about_major_padding" android:gravity="center" android:textSize="@dimen/about_names"></TextView>
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
					android:padding="@dimen/about_major_padding" android:gravity="center" android:textSize="@dimen/about_names" android:text="@string/about_with" android:id="@+id/AuthorWith"></TextView>
				<TextView android:layout_height="wrap_content" android:id="@+id/BasedOn"
					android:text="@string/about_based_on" android:layout_gravity="center_horizontal"
					android:layout_width="wrap_content"
					android:gravity="center" android:padding="@dimen/about_major_padding" android:textSize="@dimen/about_names"></TextView>
			</LinearLayout>
		</LinearLayout>
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/url_project"
			android:layout_gravity="center_horizontal" android:id="@+id/ProjectLink"
			android:autoLink="web" android:textSize="@dimen/about_urls"></TextView>
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/GeohashLink"
			android:layout_gravity="center_horizontal" android:text="@string/url_geohash"
			android:autoLink="web" android:textSize="@dimen/about_urls"></TextView>
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/GeohashDisclaimer"
			android:layout_gravity="center_horizontal" android:text="@string/about_disclaimer" android:textSize="@dimen/about_version_date"></TextView>
	</LinearLayout>
</ScrollView>
