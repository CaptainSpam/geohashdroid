<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/infobox_background"
              android:padding="@dimen/infobox_padding">

    <TextView
        style="@style/InfoboxText"
        android:drawableLeft="@drawable/final_destination_infobox"
        android:text="@string/standby_title"
        android:id="@+id/infobox_hashpoint"/>

    <TextView
        style="@style/InfoboxText"
        android:text="@string/standby_title"
        android:drawableLeft="@drawable/current_location_infobox"
        android:id="@+id/infobox_you"/>

    <TextView
        style="@style/InfoboxText"
        android:text="@string/standby_title"
        android:drawableLeft="@drawable/distance_infobox"
        android:id="@+id/infobox_distance"/>
</LinearLayout>