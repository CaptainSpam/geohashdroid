<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory android:title="@string/pref_cat_map">
		<CheckBoxPreference android:key="AutoZoom"
			android:title="@string/pref_autozoom_title" android:summary="@string/pref_autozoom_summary"
			android:defaultValue="true" android:persistent="true" />
		<ListPreference android:key="InfoBoxSize"
			android:summary="@string/pref_infobox_summary" android:title="@string/pref_infobox_title"
			android:defaultValue="Small" android:persistent="true"
			android:entries="@array/pref_infobox_entries" android:entryValues="@array/pref_infobox_values"
			android:dialogTitle="@string/pref_infobox_dialogtitle" />
		<ListPreference android:key="Units"
			android:summary="@string/pref_units_summary" android:title="@string/pref_units_title"
			android:defaultValue="Metric" android:persistent="true"
			android:entries="@array/pref_units_entries" android:entryValues="@array/pref_units_values"
			android:dialogTitle="@string/pref_units_dialogtitle" />
		<ListPreference android:key="CoordUnits"
			android:summary="@string/pref_coordunits_summary" android:title="@string/pref_coordunits_title"
			android:defaultValue="Degrees" android:persistent="true"
			android:entries="@array/pref_coordunits_entries" android:entryValues="@array/pref_coordunits_values"
			android:dialogTitle="@string/pref_coordunits_dialogtitle" />
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/pref_cat_other">
		<CheckBoxPreference android:summary="@string/pref_remembergraticule_summary"
			android:key="RememberGraticule" android:title="@string/pref_remembergraticule_title"
			android:defaultValue="true" android:persistent="true" />
		<ListPreference android:summary="@string/pref_stockcachesize_summary"
			android:title="@string/pref_stockcachesize_title" android:key="StockCacheSize"
			android:persistent="true" android:entries="@array/pref_stockcachesize_entries"
			android:entryValues="@array/pref_stockcachesize_values"
			android:defaultValue="15"></ListPreference>
		<Preference android:summary="I START THE BROWSER"
			android:title="CLICK ME">
			<intent android:action="android.intent.action.VIEW"
				android:data="http://exclaimindustries.net" />
		</Preference>
	</PreferenceCategory>
</PreferenceScreen>

