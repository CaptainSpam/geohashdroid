<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:id="@+id/LinearLayout01"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_gravity="center_horizontal" android:layout_height="fill_parent"
	android:orientation="vertical" android:layout_width="fill_parent">
	<TextView android:text="TODAY'S DATE" android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal" android:layout_width="wrap_content"
		android:focusable="false" android:focusableInTouchMode="false"
		android:gravity="center_horizontal" android:id="@+id/Date"
		android:textSize="@dimen/details_title_fontsize"></TextView>
	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/Subtitles" android:orientation="horizontal"
		android:layout_gravity="center_horizontal" android:layout_width="fill_parent">
	</LinearLayout>
	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/Latitudes">
	</LinearLayout>
	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/Longitudes"></LinearLayout>
	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/Horiz"
		android:orientation="horizontal" android:layout_gravity="center_horizontal">
		<LinearLayout android:layout_height="wrap_content"
			android:id="@+id/LeftSide" android:layout_gravity="center_horizontal"
			android:layout_weight="1" android:layout_width="fill_parent"
			android:orientation="vertical" android:padding="@dimen/details_padding">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/DestLabel"
				android:gravity="center" android:textSize="@dimen/details_subtitle_fontsize"
				android:layout_gravity="center" android:layout_weight="1"
				android:drawableLeft="@drawable/final_destination_smaller"
				android:text="@string/details_finish"></TextView>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
				android:id="@+id/DestLat" android:textSize="@dimen/details_coords_fontsize"
				android:text="@string/standby_title"></TextView>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/DestLon"
				android:layout_gravity="center_horizontal" android:textSize="@dimen/details_coords_fontsize"
				android:text="@string/standby_title"></TextView>
		</LinearLayout>
		<LinearLayout android:layout_height="wrap_content"
			android:id="@+id/RightSide" android:layout_weight="1"
			android:layout_width="fill_parent" android:orientation="vertical"
			android:padding="@dimen/details_padding">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/YouLabel"
				android:gravity="center" android:textSize="@dimen/details_subtitle_fontsize"
				android:layout_gravity="center" android:layout_weight="1"
				android:drawableLeft="@drawable/ic_maps_indicator_current_position"
				android:text="@string/details_you"></TextView>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/YouLat"
				android:layout_gravity="center_horizontal" android:textSize="@dimen/details_coords_fontsize"
				android:text="@string/standby_title"></TextView>

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/YouLon"
				android:textSize="@dimen/details_coords_fontsize"
				android:layout_gravity="center_horizontal" android:text="@string/standby_title"></TextView>
		</LinearLayout>
	</LinearLayout>



	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/details_dist"
		android:textSize="@dimen/details_coords_fontsize"
		android:layout_gravity="center_horizontal" android:id="@+id/Distance"></TextView>
	<Button android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:id="@+id/Okay" android:text="@string/backtomap_label"></Button>
</LinearLayout>
